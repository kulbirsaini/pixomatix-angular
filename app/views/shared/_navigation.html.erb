<% up_button ||= nil %>
<header class="navbar navbar-static-top" id="top" role="banner">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".pixomatix-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Pixomatix', root_path, class: 'navbar-brand', target: '_self' %>
    </div>
    <nav class="collapse navbar-collapse pixomatix-navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
        <%= link_to 'Fork On GitHub', 'https://github.com/kulbirsaini/pixomatix' %>
        </li>
        <li>
        <%= link_to 'How It Works?', 'https://github.com/kulbirsaini/pixomatix#pixomatix' %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if up_button %>
          <li ng-hide="parent_id === null">
          <a href="#/gallery/{{parent_id}}">Up <span class="glyphicon glyphicon-arrow-up"></span></a>
          </li>
        <% end %>
        <% if false && user_signed_in? %>
          <li>
          <%= link_to('Sign Out', destroy_user_session_path, method: :delete, target: '_self') %>
          </li>
          <li>
          <%= link_to('Sign In', new_user_session_path, target: '_self')  %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
